<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_view_style">
        <item name="android:textSize">@dimen/text_subheading_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
    </style>

    <style name="text_view_style_header">
        <item name="android:textSize">@dimen/text_subheading_size_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>

    </style>

    <style name="sub_text_view_style">
        <item name="android:textSize">@dimen/text_subheading_size_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="click_button_style">
        <item name="android:textSize">@dimen/text_subheading_size_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


</resources>
