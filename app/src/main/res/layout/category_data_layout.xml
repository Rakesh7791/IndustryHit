<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_category"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:src="@drawable/app_logo"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_height="wrap_content">

               <com.industryhit.industryhit.presentation.globalutils.custom.CustomTextViewMedium
                   android:id="@+id/title"
                   android:layout_width="match_parent"
                   style="@style/text_view_style"
                   android:layout_height="wrap_content" />
                <com.industryhit.industryhit.presentation.globalutils.custom.CustomTextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:visibility="visible"
                    style="@style/sub_text_view_style"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.industryhit.industryhit.presentation.globalutils.custom.CustomTextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        style="@style/sub_text_view_style"
                        android:text="@string/collections"
                        android:layout_height="wrap_content" />
                    <com.industryhit.industryhit.presentation.globalutils.custom.CustomTextViewBold
                        android:id="@+id/share"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        style="@style/text_view_style"
                        android:gravity="center"
                        android:text="@string/share"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/padding_5dp"
            android:visibility="gone"
            android:background="@color/grey"/>
    </LinearLayout>


</LinearLayout>
